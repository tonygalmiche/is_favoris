<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_has_favorites" model="res.groups">
        <field name="name">Utilisateur avec favoris</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <data noupdate="1">
        <record id="is_favoris_user_rule" model="ir.rule">
            <field name="name">Favoris personnels</field>
            <field name="model_id" ref="model_is_favoris"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
